@require('../../assets/styles/vars.styl')

.BackLink
  background-color $tan
  color $green
  left 0
  line-height 30px
  padding-left 5px
  position absolute
  text-align left
  top 20px
  width auto

  a
    color $green
    padding 20px
    padding-left 6px
    text-decoration none

    &:before
      color $green
      content '\f060'
      font-family FontAwesome
      padding-right 5px

    &:active
      color $green-alpha

      &:before
        color $green-alpha
