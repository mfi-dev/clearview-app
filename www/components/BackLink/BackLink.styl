@require('../../assets/styles/vars.styl')

.BackLink
  background-color $tan
  color $green
  left 0
  padding-left 5px
  line-height: 30px
  position fixed
  text-align left
  top 20px
  width 100%

  a
    color $green
    text-decoration none
    padding 6px 15px 6px 0

    &:before
      color $green
      content '\f060'
      font-family FontAwesome
      padding-right 5px

.DirectoryPage .BackLink
  position absolute
  width auto

.DirectoryPage .BackLink,
.DoctorDetailPage .BackLink
  a
    padding 20px
    padding-left 6px

.DoctorDetailPage .BackLink,
.FormPage .BackLink
  top 0
  padding-top 24px
  line-height 34px
  width auto
