@require('../../assets/styles/vars.styl')
@require('../../assets/styles/font-awesome.css')

.DoctorListItem
  &__Container
    color $green
    padding 20px
    text-align left
    width 100%
    height 100%
    overflow-y hidden
    overflow-x hidden
    box-sizing border-box

  &--PracticeName,
  &--Specialty
    font-size 13px
  &--PhoneNumber
    font-size 14px
    font-weight bolder
  &__Links
    padding-top 6px
    div
      display inline-block
      a
        color $off-white
        text-decoration none
