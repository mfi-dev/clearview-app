@require('../../assets/styles/vars.styl')

.DoctorListItem
  &__Container
    color $green
    padding 20px
    text-align left
    width 100%
    height 100%
    overflow-y hidden
    overflow-x hidden
    box-sizing border-box

  &--Specialty
    font-size 14px
    font-weight normal
  &--PracticeName
    font-size 12px
    font-weight bold
  &--PhoneNumber
    font-size 14px
    font-weight bolder
    padding 14px 0 7px

  &__Links
    div
      display inline-block
      a
        color $off-white
        text-decoration none
