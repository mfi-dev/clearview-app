@require('../../assets/styles/vars.styl')
@require('../../assets/styles/font-awesome.css')

.DirectoryList
  &__ItemContainer
    color $green
    padding 20px
    text-align left
    width 100%
    height 100%
    overflow-y hidden
    overflow-x hidden
    box-sizing border-box
  &__Item
    &--PracticeName,
    &--Specialty
      font-size 13px
    &--PhoneNumber
      font-size 14px
      font-weight bolder
    &__Links
      padding-top 6px
      div
        display inline-block
        a
          color $off-white
          text-decoration none
    &__Button
      padding 10px
      background-color $green
      margin-right: 15px
      font-size 14px
      box-shadow 0 1px 2px 0 rgba(0, 0, 0, .70)
      color $off-white !important
      display inline-block
      &:active,
      &--Active
        box-shadow none
      &--Call::before
        content '\f095'
        font-family FontAwesome
        padding-right 10px
        color $off-white
      &--MoreInfo::after
        content '\f061'
        font-family FontAwesome
        color $off-white
        padding-left 10px

  .Grid__cell
    display flex
    flex-direction column
    justify-content center