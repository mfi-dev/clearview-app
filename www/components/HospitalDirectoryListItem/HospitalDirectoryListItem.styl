@require('../../assets/styles/vars.styl')

.HospitalDirectoryListItem
  &__Container
    color $green
    padding 20px
    text-align left
    width 100%
    height 100%
    overflow-y hidden
    overflow-x hidden
    box-sizing border-box
  &__Name
    font-weight bolder
    font-size 16px
  &__PhoneNumber__Container
    padding-top: 7px
  &__PhoneNumber
    font-size 14px
  &__Links__Container
    padding-top: 7px
    > div
      display inline-block
    a
      text-decoration none