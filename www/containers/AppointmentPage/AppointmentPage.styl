@require('../../assets/styles/vars.styl')

.AppointmentPage
  header
    background-color $tan
    padding 35px 20px 20px 20px
  label
    color $brown
    font-family Lato
    font-size 18px
    line-height: 26px
    display block
    text-align left
    padding-left 5%
  button
    width 90%
    color $off-white
    margin-top 26px
  &__Icon
    &:before
      font-family FontAwesome
      content '\f271'
      color $brown
      font-size 46px
  &__Instructions
    color $brown
    font Lato
    font-style bold
    font-size 16px
    line-height 24px
    margin 12px 0
  &__InputGroup
    padding 12px 0

