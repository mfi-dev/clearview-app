@require('../../assets/styles/vars.styl')

html
  background $off-white
  height 100%
  -webkit-user-select none
  -webkit-touch-callout none
  -webkit-tap-highlight-color rgba(0,0,0,0)

body
  font-family Lato
  margin 0

h1
  color $brown
  font-size 24px

a
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-tap-highlight-color transparent

 &:-moz-any-link,
 &:-webkit-any-link
  color $green

.Page
  box-sizing border-box
  text-align center

.PageHeader__Title
  color $brown
  font-family Lato
  font-size 24px

main
  padding-top 20px

nav a
  padding-right 10px

button
  padding 10px
  background-color $green
  margin-right: 15px
  font-size 14px
  box-shadow 0 1px 2px 0 rgba(0, 0, 0, .70)

input
  width 90%
  height 30px
  font-size 18px
  margin 0 auto