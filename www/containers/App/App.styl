@require('../../assets/styles/vars.styl')
@require('../../assets/styles/fonts.styl')

html
  background $off-white
  height 100%
  -webkit-user-select none
  -webkit-touch-callout none
  -webkit-tap-highlight-color rgba(0,0,0,0)

body
  font-family Lato
  margin 0

h1
  color $brown
  font-size 24px
  padding 12px 0
  margin 0

a
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-tap-highlight-color transparent

 &:-moz-any-link,
 &:-webkit-any-link
  color $green

.Page
  text-align center
  padding-bottom $footer-nav-height
  margin 0
  position relative
  box-sizing content-box

.PageHeader__Title
  color $brown
  font-family Lato
  font-size 24px

nav a
  padding-right 10px

button
  padding 10px
  background-color $green
  margin-right: 15px
  font-size 14px
  box-shadow 0 1px 2px 0 rgba(0, 0, 0, .70)

input
  width 90%
  height 30px
  font-size 18px
  margin 0 auto

.Button
  padding 10px
  background-color $green
  margin-right: 15px
  font-size 14px
  box-shadow 0 1px 2px 0 rgba(0, 0, 0, .70)
  color $off-white !important
  display inline-block
  text-decoration none
  &:active,
  &--Active
    box-shadow none
  &--Call::before
    content '\f095'
    font-family FontAwesome
    padding-right 10px
    color $off-white
  &--MoreInfo::after
    content '\f061'
    font-family FontAwesome
    color $off-white
    padding-left 10px
  &--Directory::before
    content '\f02d'
    font-family: FontAwesome
    color $off-white
    padding-right 10px
  &--Map:before
    font-family FontAwesome
    content '\f041'
    padding-right 7px