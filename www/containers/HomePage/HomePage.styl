@require('../../assets/styles/vars.styl')

.HomePage
  display flex
  flex-direction column
  justify-content center
  padding 0 5%
  text-align center

.Menu
  text-align center
  width 100%

  &__Link
    text-decoration none
    &:active &Item__Container
      box-shadow none
      -webkit-transform scale3d(.98, .98, 1)
      color  $white-alpha

  &__LinkItem__Container
    background-color $green
    border-radius 15px
    box-shadow 0 4px 8px 0 rgba(0, 0, 0, .2), 0 6px 20px 0 rgba(0, 0, 0, .19)
    color $white
    display flex
    flex-direction column
    height 18vh
    justify-content center
    margin-bottom 2vh
    width 100%

  &__LinkItem
    text-align center
    vertical-align middle

    &__Icon
      display inline-block
      font-family 'clearview'
      font-size 36px
      margin-right 18px
      vertical-align middle
      &:before
        font-family clearview
      &--Doctors:before
        content 'a'
      &--Hospitals:before
        content 'b'
      &--Pharmacies:before
        content 'c'

