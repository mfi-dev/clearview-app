@require('../../assets/styles/vars.styl')
@require('../../assets/styles/font-awesome.css')

.FilterInput
  width 90%
  height 30px
  font-size 18px
  margin 0 auto

.DirectoryPage
  header
    height $directory-header-height
  h1
    margin 0
    -webkit-margin-before 0
    -webkit-margin-after 0
    padding-top 18px
    padding-bottom 18px
  &__ItemCount
    padding-top 10px

.DirectoryList
  &__Item
    color $green
    padding-left 20px
    text-align left
    height: 100%;
    width: 100%;

    &__Links
      list-style-type none
      padding 0
      margin 0
      margin-top 20px

      li
        display inline-block
        a
          color $off-white
          text-decoration none

    &__Button
      padding 10px
      background-color $green
      margin-right: 15px
      font-size 14px
      box-shadow 0 1px 2px 0 rgba(0, 0, 0, .70)
      color $off-white !important

      &:active,
      &--active
        box-shadow none

      &--Call::before
        content '\f095'
        font-family FontAwesome
        padding-right 10px
        color $off-white
        margin-top -15px

      &--MoreInfo::after
        content '\f061'
        font-family FontAwesome
        color $off-white
        padding-left 10px
  &__Item--doctor
    padding 20px
.Grid__cell
  display flex
  flex-direction column
  justify-content center
